generator client {
    provider = "prisma-client-js"
}

generator zod {
    provider = "prisma-zod-generator"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id                   String                     @id @default(cuid())
    name                 String?
    email                String?                    @unique
    emailVerified        DateTime?
    image                String?
    accounts             Account[]
    sessions             Session[]
    materialQuantityLogs MaterialQuantityLogModel[]
    BattlepassLog        BattlepassLogModel[]
    HoyoverseImportModel HoyoverseImportModel[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model MaterialModel {
    id                   String                     @id
    name                 String
    namePlural           String?
    imageLink            String?
    materialQuantityLogs MaterialQuantityLogModel[]
    rarity               String?

    @@unique([name])
    @@map("Material")
}

model MaterialQuantityLogModel {
    id             String    @id @default(cuid())
    quantityTotal  Int
    quantityChange Int?
    atTime         DateTime
    comment        String?
    importTime     DateTime?

    idMaterial String
    material   MaterialModel @relation(fields: [idMaterial], references: [id])

    idUser String
    user   User   @relation(fields: [idUser], references: [id])

    idImport String?
    import   HoyoverseImportModel? @relation(fields: [idImport], references: [id])

    idNextLog         String?                   @unique
    nextLog           MaterialQuantityLogModel? @relation("LogHistoryNext", fields: [idNextLog], references: [id], onDelete: Restrict, onUpdate: Restrict)
    currentLogForNext MaterialQuantityLogModel? @relation("LogHistoryNext")

    idPreviousLog         String?                   @unique
    previousLog           MaterialQuantityLogModel? @relation("LogHistoryPrevious", fields: [idPreviousLog], references: [id], onDelete: Restrict, onUpdate: Restrict)
    currentLogForprevious MaterialQuantityLogModel? @relation("LogHistoryPrevious")

    @@unique(fields: [idUser, idMaterial, atTime, quantityTotal], name: "UniqueQuantityAtATime")
    @@map("MaterialQuantityLog")
}

model HoyoverseImportModel {
    id               String   @id @default(cuid())
    serverUpdateTime DateTime

    idUser                   String
    user                     User                       @relation(fields: [idUser], references: [id])
    MaterialQuantityLogModel MaterialQuantityLogModel[]

    @@unique([serverUpdateTime, idUser])
    @@map("HoyoverseImport")
}

model BattlepassLogModel {
    id                   String   @id @default(cuid())
    xp                   Int
    currentLimitProgress Int
    loggedAt             DateTime @default(now())
    idUser               String
    user                 User     @relation(fields: [idUser], references: [id])

    @@map("BattlepassLog")
}
